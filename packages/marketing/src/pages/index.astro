---
const title = 'Token Sync - W3C Design Token Synchronization';
const description = 'Real-time design token synchronization between web and design tools. W3C DTCG spec-compliant. MIT-licensed plugins, enterprise sync server.';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="color-scheme" content="light dark" />
    <title>{title}</title>
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@xz/fonts@1/serve/iosevka.min.css"
    />
  </head>
  <body>
    <header>
      <div class="container header-content">
        <a href="/" class="logo">Token Sync</a>
        <nav>
          <a href="#features">Features</a>
          <a href="#pricing">Pricing</a>
          <a href="https://github.com/meodai/token-sync">Docs</a>
          <a href="mailto:sales@token-sync.dev">Contact</a>
        </nav>
      </div>
    </header>

    <main>
      <section class="hero">
        <div class="container">
          <div class="badge">W3C Design Tokens Community Group Specification</div>
          <h1>Sync any website<br/>with any design tool</h1>
          <p class="hero-text">
            Live design token synchronization. Your website pushes colors, spacing, typography
            to Figma, Sketch, Aseprite &mdash; instantly. One protocol, every tool.
          </p>
          <div class="hero-buttons">
            <a href="#pricing" class="btn btn--primary">Get Started</a>
            <a href="https://github.com/meodai/token-sync" class="btn">View Docs</a>
          </div>
        </div>
      </section>

      <section class="diagram">
        <div class="container">
          <svg class="diagram__svg" viewBox="0 0 800 320" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Token Sync architecture diagram: any website connects via the dts:// protocol through a sync server to multiple design tools">
            <!-- Left: Sources -->
            <rect x="0" y="20" width="180" height="280" stroke="currentColor" stroke-width="2" fill="none" opacity="0.15"/>
            <text x="90" y="12" text-anchor="middle" fill="currentColor" font-size="11" font-weight="600" letter-spacing="0.08em" opacity="0.5">ANY SOURCE</text>

            <rect x="16" y="44" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="90" y="67" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Your Website</text>

            <rect x="16" y="96" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="90" y="119" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">React App</text>

            <rect x="16" y="148" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="90" y="171" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Design System</text>

            <rect x="16" y="200" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="90" y="223" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Node.js Script</text>

            <rect x="16" y="252" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="90" y="275" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Any App</text>

            <!-- Arrow left to center -->
            <line x1="196" y1="160" x2="278" y2="160" stroke="currentColor" stroke-width="1.5" opacity="0.3"/>
            <polygon points="278,155 288,160 278,165" fill="currentColor" opacity="0.3"/>

            <!-- Center: Protocol + Server -->
            <rect x="296" y="100" width="208" height="120" stroke="currentColor" stroke-width="2" fill="none"/>

            <text x="400" y="92" text-anchor="middle" fill="currentColor" font-size="11" font-weight="600" letter-spacing="0.08em" opacity="0.5">TOKEN SYNC</text>

            <!-- dts:// protocol badge -->
            <rect x="320" y="118" width="160" height="30" fill="currentColor" opacity="1"/>
            <text x="400" y="138" text-anchor="middle" font-size="14" font-weight="400" letter-spacing="0.06em">
              <tspan fill="currentColor" class="diagram__proto-text">dts://</tspan>
            </text>

            <!-- Server label -->
            <text x="400" y="174" text-anchor="middle" fill="currentColor" font-size="11" font-weight="300" opacity="0.6">WebSocket Relay Server</text>

            <!-- W3C badge -->
            <text x="400" y="200" text-anchor="middle" fill="currentColor" font-size="10" font-weight="300" opacity="0.4">W3C DTCG Spec</text>

            <!-- Arrow center to right -->
            <line x1="512" y1="160" x2="602" y2="160" stroke="currentColor" stroke-width="1.5" opacity="0.3"/>
            <polygon points="602,155 612,160 602,165" fill="currentColor" opacity="0.3"/>

            <!-- Right: Targets -->
            <rect x="620" y="20" width="180" height="280" stroke="currentColor" stroke-width="2" fill="none" opacity="0.15"/>
            <text x="710" y="12" text-anchor="middle" fill="currentColor" font-size="11" font-weight="600" letter-spacing="0.08em" opacity="0.5">ANY TARGET</text>

            <rect x="636" y="44" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="710" y="67" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Figma</text>

            <rect x="636" y="96" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="710" y="119" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Sketch</text>

            <rect x="636" y="148" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="710" y="171" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Aseprite</text>

            <rect x="636" y="200" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="710" y="223" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Adobe</text>

            <rect x="636" y="252" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="710" y="275" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Any Tool</text>
          </svg>
        </div>
      </section>

      <section class="demo">
        <div class="container">
          <h2>See It In Action</h2>
          <div class="demo__grid">
            <div class="demo__card">
              <h3>Your Design System</h3>
              <div class="demo__token-gen">
                <div class="demo__color-preview" id="colorPreview"></div>
                <div class="demo__token-info">
                  <div class="demo__label">Token</div>
                  <code class="demo__code" id="tokenCode">dts://k8x9m2p4n7q5</code>
                  <div class="demo__label" style="margin-top: 0.75rem;">Color Value</div>
                  <div class="demo__value" id="tokenValue">#0066cc</div>
                </div>
                <button class="btn btn--primary btn--block" id="updateColorBtn">Update Color</button>
              </div>
            </div>

            <div class="demo__arrow">
              <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8 24H40M40 24L28 12M40 24L28 36" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>

            <div class="demo__card">
              <h3>Design Tool (Figma)</h3>
              <div class="demo__tool">
                <div class="demo__tool-header">
                  <span class="demo__tool-tab demo__tool-tab--active">Design</span>
                  <span class="demo__tool-tab">Prototype</span>
                </div>
                <div class="demo__tool-canvas">
                  <div class="demo__tool-sidebar">
                    <div class="demo__label">Layers</div>
                    <div class="demo__tool-layer">Button</div>
                    <div class="demo__tool-layer">Card</div>
                  </div>
                  <div class="demo__tool-viewport">
                    <div class="demo__tool-btn" id="designElement">Click me</div>
                  </div>
                  <div class="demo__tool-props">
                    <div class="demo__label">Fill</div>
                    <div class="demo__tool-swatch" id="propertyColor"></div>
                  </div>
                </div>
                <div class="demo__tool-status" id="syncStatus">
                  <span class="demo__status-dot"></span>
                  <span class="demo__status-text">Waiting for changes...</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="features" id="features">
        <div class="container">
          <h2>Why Token Sync?</h2>
          <div class="features__grid">
            <div class="features__card">
              <h3>W3C Spec Compliant</h3>
              <p>
                Built on the W3C Design Tokens Community Group specification. Generic, tool-agnostic token format
                that works everywhere.
              </p>
            </div>

            <div class="features__card">
              <h3>Real-Time Sync</h3>
              <p>
                WebSocket-based synchronization. Changes on your website appear instantly in Figma.
                No manual exports, no plugin updates required.
              </p>
            </div>

            <div class="features__card">
              <h3>Plugin Architecture</h3>
              <p>
                Clean adapter pattern. Each tool (Figma, Sketch, Aseprite) owns its transformation logic.
                Fully type-safe end-to-end.
              </p>
            </div>

            <div class="features__card">
              <h3>Token-Based Pairing</h3>
              <p>
                Simple <code>dts://</code> tokens for connecting clients. No accounts, no OAuth, no complexity.
                Just copy-paste and sync.
              </p>
            </div>

            <div class="features__card">
              <h3>Enterprise Ready</h3>
              <p>
                Session management, auto-cleanup, reconnection with exponential backoff, 10MB payload limits.
                Built for production.
              </p>
            </div>

            <div class="features__card">
              <h3>Self-Hosted</h3>
              <p>
                Run your own sync server. Complete control over your infrastructure. AGPL-3.0 for open source,
                commercial license available.
              </p>
            </div>
          </div>
        </div>
      </section>

      <section class="pricing" id="pricing">
        <div class="container">
          <h2>Pricing</h2>
          <div class="pricing__grid">
            <div class="pricing__card">
              <h3>Free</h3>
              <div class="pricing__price">$0</div>
              <div class="pricing__detail">Forever</div>
              <ul>
                <li>Personal projects only</li>
                <li>Limited sessions</li>
                <li>Self-hosted (AGPL-3.0)</li>
                <li>MIT library (<code>token-sync</code> on npm)</li>
                <li>Use plugins as-is (cannot modify)</li>
                <li>Community support</li>
              </ul>
              <a href="https://github.com/meodai/token-sync" class="btn btn--block">Get Started</a>
            </div>

            <div class="pricing__card pricing__card--featured">
              <h3>Pro</h3>
              <div class="pricing__price">$29</div>
              <div class="pricing__detail">per month</div>
              <ul>
                <li>Commercial use allowed</li>
                <li>Hosted by us (no setup required)</li>
                <li>Unlimited sessions</li>
                <li>99.9% uptime SLA</li>
                <li>Email support</li>
                <li>Use plugins as-is (cannot modify)</li>
              </ul>
              <a href="mailto:sales@token-sync.dev" class="btn btn--primary btn--block">Get Started</a>
            </div>

            <div class="pricing__card">
              <h3>Enterprise</h3>
              <div class="pricing__price">$299</div>
              <div class="pricing__detail">per month</div>
              <ul>
                <li>Everything in Pro</li>
                <li>Self-hosting with commercial license</li>
                <li>Modify plugins for your needs</li>
                <li>Source code access</li>
                <li>SSO & SAML authentication</li>
                <li>Priority support (24h SLA)</li>
                <li>Custom integrations</li>
              </ul>
              <a href="mailto:sales@token-sync.dev" class="btn btn--primary btn--block">Contact Sales</a>
            </div>
          </div>

          <div class="pricing__note">
            <p><strong>Open Source Exception:</strong> OSI-approved open source projects get Pro license free.</p>
            <p>Email <a href="mailto:opensource@token-sync.dev">opensource@token-sync.dev</a> to apply.</p>
          </div>
        </div>
      </section>
    </main>

    <footer>
      <div class="container">
        <p>&copy; 2025 Token Sync by <a href="https://github.com/meodai">David Aerne (meodai)</a></p>
        <p class="footer__links">
          <a href="mailto:sales@token-sync.dev">sales@token-sync.dev</a> &middot;
          <a href="mailto:opensource@token-sync.dev">opensource@token-sync.dev</a> &middot;
          <a href="https://github.com/meodai/token-sync">GitHub</a>
        </p>
      </div>
    </footer>
  </body>

  <style is:global>
    /* --- Reset & Base --- */

    *,
    *::before,
    *::after {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --white: #fff;
      --black: #292f2f;
      --text: light-dark(var(--black), var(--white));
      --bg: light-dark(var(--white), var(--black));
      --line: color-mix(in lab, currentColor 18%, var(--bg));
      --ease: cubic-bezier(0.3, 0.7, 0, 1);
      --success: #1b8a2d;
    }

    html {
      color-scheme: light dark;
    }

    body {
      font-family: 'Iosevka Web', 'Iosevka', 'SF Mono', 'Fira Code', 'Fira Mono', 'Roboto Mono', monospace;
      font-weight: 300;
      font-size: 1rem;
      line-height: 1.6;
      color: var(--text);
      background: var(--bg);
      text-rendering: optimizeLegibility;
      -webkit-font-smoothing: antialiased;
    }

    .container {
      max-width: 60rem;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    /* --- Typography --- */

    h1, h2, h3 {
      font-weight: 200;
      letter-spacing: -0.03em;
      line-height: 1.2;
    }

    h1 {
      font-size: clamp(2.4rem, 6vw, 3.6rem);
      margin-bottom: 1.5rem;
    }

    h2 {
      font-size: clamp(1.8rem, 4vw, 2.4rem);
      text-align: center;
      margin-bottom: 3rem;
    }

    h3 {
      font-size: 1.2rem;
      font-weight: 300;
      margin-bottom: 0.75rem;
    }

    p {
      max-width: 40rem;
    }

    a {
      color: currentColor;
      text-decoration-thickness: 1px;
      text-underline-offset: 3px;
      transition: opacity 0.2s var(--ease);
    }

    a:hover {
      opacity: 0.7;
    }

    /* External links get arrow */
    a[href^="http"]::after,
    a[href^="mailto"]::after {
      content: '\2197';
      display: inline-block;
      margin-left: 0.15em;
      font-size: 0.85em;
      opacity: 0.5;
    }

    code {
      font-family: inherit;
      font-size: 0.9em;
      background: var(--text);
      color: var(--bg);
      padding: 0.1em 0.4em;
      border: 1px solid var(--line);
    }

    strong {
      font-weight: 600;
    }

    /* --- Buttons --- */

    .btn {
      display: inline-block;
      padding: 0.46rem 0.9rem;
      border: 2px solid currentColor;
      background: transparent;
      color: currentColor;
      font-family: inherit;
      font-weight: 400;
      font-size: 0.85rem;
      letter-spacing: 0.04em;
      text-transform: uppercase;
      text-decoration: none;
      cursor: pointer;
      transition: all 0.2s var(--ease);
    }

    .btn::after {
      /* Override external link arrow for buttons */
      content: none !important;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 2px 0 0 currentColor;
      opacity: 1;
    }

    .btn:active {
      transform: translateY(0);
      box-shadow: none;
    }

    .btn--primary {
      background: var(--text);
      color: var(--bg);
      border-color: var(--text);
    }

    .btn--primary:hover {
      box-shadow: 0 2px 0 0 var(--text);
    }

    .btn--block {
      display: block;
      width: 100%;
      text-align: center;
    }

    /* --- Header --- */

    header {
      padding: 1.5rem 0;
      border-bottom: 1px solid var(--line);
    }

    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      font-size: 1rem;
      font-weight: 400;
      text-decoration: none;
      text-transform: uppercase;
      letter-spacing: 0.12em;
    }

    .logo:hover {
      opacity: 1;
    }

    .logo::after {
      content: none !important;
    }

    nav {
      display: flex;
      gap: 1.5rem;
    }

    nav a {
      font-size: 0.8rem;
      letter-spacing: 0.04em;
      text-transform: uppercase;
      text-decoration: none;
    }

    nav a::after {
      content: none !important;
    }

    /* --- Hero --- */

    .hero {
      padding: 6rem 0 5rem;
      text-align: center;
    }

    .hero .container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .badge {
      display: inline-block;
      padding: 0.3rem 0.8rem;
      border: 1px solid var(--line);
      font-size: 0.7rem;
      font-weight: 400;
      text-transform: uppercase;
      letter-spacing: 0.06em;
      margin-bottom: 2rem;
      color: currentColor;
      opacity: 0.7;
    }

    .hero-text {
      font-size: 1.1rem;
      font-weight: 300;
      opacity: 0.7;
      margin: 0 auto 2.5rem;
      text-align: center;
    }

    .hero-buttons {
      display: flex;
      gap: 0.75rem;
      justify-content: center;
    }

    /* --- Diagram Section --- */

    .diagram {
      padding: 4rem 0;
      border-top: 1px solid var(--line);
    }

    .diagram__svg {
      width: 100%;
      max-width: 50rem;
      height: auto;
      margin: 0 auto;
      display: block;
      font-family: 'Iosevka Web', 'Iosevka', monospace;
    }

    .diagram__proto-text {
      fill: var(--bg);
    }

    @media (max-width: 768px) {
      .diagram {
        padding: 2.5rem 0;
        overflow-x: auto;
      }

      .diagram__svg {
        min-width: 36rem;
      }
    }

    /* --- Demo Section --- */

    .demo {
      padding: 5rem 0;
      border-top: 1px solid var(--line);
      border-bottom: 1px solid var(--line);
    }

    .demo__grid {
      display: grid;
      grid-template-columns: 1fr auto 1fr;
      gap: 1.5rem;
      align-items: center;
    }

    .demo__card {
      border: 2px solid var(--line);
      padding: 1.5rem;
    }

    .demo__card h3 {
      margin-bottom: 1.25rem;
      padding-bottom: 0.75rem;
      border-bottom: 1px solid var(--line);
    }

    .demo__arrow {
      opacity: 0.3;
      display: flex;
      align-items: center;
    }

    .demo__token-gen {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .demo__color-preview {
      width: 100%;
      height: 140px;
      background: #0066cc;
      border: 1px solid var(--line);
      transition: background-color 0.4s var(--ease);
    }

    .demo__token-info {
      display: flex;
      flex-direction: column;
    }

    .demo__label {
      font-size: 0.65rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      opacity: 0.5;
      margin-bottom: 0.25rem;
    }

    .demo__code {
      display: block;
      padding: 0.5rem 0.7rem;
      font-size: 0.8rem;
      word-break: break-all;
    }

    .demo__value {
      font-size: 1.4rem;
      font-weight: 200;
      font-family: inherit;
      letter-spacing: 0.04em;
      transition: color 0.4s var(--ease);
    }

    /* --- Tool mockup --- */

    .demo__tool {
      border: 1px solid var(--line);
      overflow: hidden;
    }

    .demo__tool-header {
      display: flex;
      gap: 0;
      border-bottom: 1px solid var(--line);
    }

    .demo__tool-tab {
      padding: 0.4rem 0.8rem;
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.06em;
      opacity: 0.4;
      border-right: 1px solid var(--line);
    }

    .demo__tool-tab--active {
      opacity: 1;
      font-weight: 400;
      border-bottom: 2px solid currentColor;
    }

    .demo__tool-canvas {
      display: grid;
      grid-template-columns: 90px 1fr 70px;
      min-height: 200px;
    }

    .demo__tool-sidebar {
      border-right: 1px solid var(--line);
      padding: 0.6rem;
    }

    .demo__tool-layer {
      padding: 0.3rem 0.5rem;
      font-size: 0.7rem;
      border: 1px solid var(--line);
      margin-bottom: 0.25rem;
    }

    .demo__tool-viewport {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1.5rem;
      background: color-mix(in lab, var(--bg) 95%, var(--text));
    }

    .demo__tool-btn {
      background: #0066cc;
      color: #fff;
      padding: 0.5rem 1.5rem;
      font-family: inherit;
      font-size: 0.8rem;
      font-weight: 400;
      border: none;
      transition: background-color 0.6s var(--ease);
    }

    .demo__tool-props {
      border-left: 1px solid var(--line);
      padding: 0.6rem;
    }

    .demo__tool-swatch {
      width: 48px;
      height: 48px;
      background: #0066cc;
      border: 1px solid var(--line);
      transition: background-color 0.6s var(--ease);
    }

    .demo__tool-status {
      border-top: 1px solid var(--line);
      padding: 0.5rem 0.8rem;
      display: flex;
      align-items: center;
      gap: 0.4rem;
      font-size: 0.7rem;
    }

    .demo__status-dot {
      width: 6px;
      height: 6px;
      border-radius: 50%;
      background: currentColor;
      opacity: 0.3;
      transition: all 0.3s var(--ease);
    }

    .demo__status-dot.syncing {
      background: #b07d16;
      opacity: 1;
      animation: blink 1s ease-in-out infinite;
    }

    .demo__status-dot.synced {
      background: var(--success);
      opacity: 1;
    }

    @keyframes blink {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.3; }
    }

    .demo__status-text {
      opacity: 0.5;
    }

    /* --- Features --- */

    .features {
      padding: 5rem 0;
    }

    .features__grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 1px;
      border: 2px solid var(--line);
      background: var(--line);
    }

    .features__card {
      padding: 1.5rem;
      background: var(--bg);
    }

    .features__card p {
      font-size: 0.85rem;
      opacity: 0.7;
      line-height: 1.6;
