---
import '../styles/widget.css';
const title = '⊷ Token Beam - W3C Design Token Synchronization';
const description = 'Real-time design token synchronization between web and design tools. W3C DTCG spec-compliant. MIT-licensed plugins, enterprise sync server.';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="color-scheme" content="light dark" />
    <title>{title}</title>
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@xz/fonts@1/serve/iosevka.min.css"
    />
  </head>
  <body>
    <header>
      <div class="container header-content">
        <a href="/" class="logo"><span class="logo__icon" aria-hidden="true">⊷</span> Token Beam</a>
        <nav>
          <a href="#demo">Demo</a>
          <a href="#plugins">Plugins</a>
          <a href="#developers">Developers</a>
          <a href="#pricing">Pricing</a>
          <a href="https://github.com/meodai/token-beam">GitHub</a>
        </nav>
      </div>
    </header>

    <main>
      <section class="hero">
        <div class="container">
          <div class="badge">W3C Design Tokens Community Group Specification</div>
          <h1>Sync any website<br/>with any design tool</h1>
          <p class="hero-text">
            Live design token synchronization. Your website pushes colors, spacing, typography
            to Figma, Sketch, Aseprite &mdash; instantly. One protocol, every tool.
          </p>
          <div class="hero-buttons">
            <a href="#pricing" class="btn btn--primary">Get Started</a>
            <a href="https://github.com/meodai/token-beam" class="btn">View Docs</a>
          </div>
        </div>
      </section>

      <section class="diagram">
        <div class="container">
          <svg class="diagram__svg" viewBox="0 0 800 320" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Token Beam architecture diagram: any website connects via the beam:// protocol through a sync server to multiple design tools">
            <!-- Left: Sources -->
            <rect x="0" y="20" width="180" height="280" stroke="currentColor" stroke-width="2" fill="none" opacity="0.15"/>
            <text x="90" y="12" text-anchor="middle" fill="currentColor" font-size="11" font-weight="600" letter-spacing="0.08em" opacity="0.5">ANY SOURCE</text>

            <rect x="16" y="44" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="90" y="67" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Your Website</text>

            <rect x="16" y="96" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="90" y="119" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">React App</text>

            <rect x="16" y="148" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="90" y="171" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Design System</text>

            <rect x="16" y="200" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="90" y="223" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Node.js Script</text>

            <rect x="16" y="252" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="90" y="275" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Any App</text>

            <!-- Arrow left to center -->
            <line x1="196" y1="160" x2="278" y2="160" stroke="currentColor" stroke-width="1.5" opacity="0.3"/>
            <polygon points="278,155 288,160 278,165" fill="currentColor" opacity="0.3"/>

            <!-- Center: Protocol + Server -->
            <rect x="296" y="100" width="208" height="120" stroke="currentColor" stroke-width="2" fill="none"/>

            <text x="400" y="92" text-anchor="middle" fill="currentColor" font-size="11" font-weight="600" letter-spacing="0.08em" opacity="0.5">⊷ TOKEN BEAM</text>

            <!-- beam:// protocol badge -->
            <rect x="320" y="118" width="160" height="30" fill="currentColor" opacity="1"/>
            <text x="400" y="138" text-anchor="middle" font-size="14" font-weight="400" letter-spacing="0.06em">
              <tspan fill="currentColor" class="diagram__proto-text">beam://</tspan>
            </text>

            <!-- Server label -->
            <text x="400" y="174" text-anchor="middle" fill="currentColor" font-size="11" font-weight="300" opacity="0.6">WebSocket Relay Server</text>

            <!-- W3C badge -->
            <text x="400" y="200" text-anchor="middle" fill="currentColor" font-size="10" font-weight="300" opacity="0.4">W3C DTCG Spec</text>

            <!-- Arrow center to right -->
            <line x1="512" y1="160" x2="602" y2="160" stroke="currentColor" stroke-width="1.5" opacity="0.3"/>
            <polygon points="602,155 612,160 602,165" fill="currentColor" opacity="0.3"/>

            <!-- Right: Targets -->
            <rect x="620" y="20" width="180" height="280" stroke="currentColor" stroke-width="2" fill="none" opacity="0.15"/>
            <text x="710" y="12" text-anchor="middle" fill="currentColor" font-size="11" font-weight="600" letter-spacing="0.08em" opacity="0.5">ANY TARGET</text>

            <rect x="636" y="44" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="710" y="67" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Figma</text>

            <rect x="636" y="96" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="710" y="119" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Sketch</text>

            <rect x="636" y="148" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="710" y="171" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Aseprite</text>

            <rect x="636" y="200" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="710" y="223" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Adobe</text>

            <rect x="636" y="252" width="148" height="36" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="710" y="275" text-anchor="middle" fill="currentColor" font-size="12" font-weight="300">Any Tool</text>
          </svg>
        </div>
      </section>

      <section class="demo" id="demo">
        <div class="container">
          <h2>Try It Now</h2>
          <p class="section-intro">This is a live demo. Install a plugin below, paste the token, and watch your design tool update in real-time.</p>

          <div class="demo__widget-wrap">
            <div id="swatches" class="demo__swatches"></div>
            <button class="btn btn--primary btn--block" id="regen-btn">Regenerate Colors</button>
          </div>

          <div class="demo__widget-wrap">
            <div class="dts-widget" data-dts="widget">
              <div class="dts-widget__row">
                <span class="dts-widget__label">Session</span>
                <div class="dts-widget__token-wrap">
                  <button class="dts-widget__token" data-dts="token" disabled>Connecting...</button>
                  <span class="dts-widget__status" data-dts="status"></span>
                </div>
                <button class="dts-widget__unlink" data-dts="unlink" style="display:none">
                  <span class="dts-widget__dot"></span>
                  <span class="dts-widget__unlink-label">Unlink</span>
                </button>
                <div class="dts-widget__help" data-dts="help-wrap">
                  <button class="dts-widget__help-btn" data-dts="help-btn" aria-expanded="false">?</button>
                  <div class="dts-widget__tooltip">
                    <p>Copy the session token and paste it into your design tool's Token Beam plugin to start syncing.</p>
                    <p>Available plugins:</p>
                    <ul class="dts-widget__plugins" data-dts="plugin-list">
                      <li>Loading&hellip;</li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="dts-widget__error" data-dts="error" style="display:none"></div>
              <div class="dts-widget__offline">Offline &mdash; click to reconnect</div>
            </div>
          </div>
        </div>
      </section>

      <section class="plugins" id="plugins">
        <div class="container">
          <h2>Supported Design Tools</h2>
          <p class="section-intro">Install the plugin for your tool. Paste the session token. That's it.</p>
          <div class="plugins__grid">
            <a href="https://www.figma.com/community/plugin/888-token-beam" class="plugins__card" target="_blank" rel="noreferrer">
              <h3>Figma</h3>
              <p>Community plugin. Works with Figma and FigJam.</p>
            </a>
            <a href="https://github.com/nicolecomputer/token-beam-for-sketch" class="plugins__card" target="_blank" rel="noreferrer">
              <h3>Sketch</h3>
              <p>Native macOS plugin with toolbar integration.</p>
            </a>
            <a href="https://github.com/meodai/token-beam/tree/main/packages/krita" class="plugins__card" target="_blank" rel="noreferrer">
              <h3>Krita</h3>
              <p>Python plugin for color palette sync.</p>
            </a>
            <a href="https://github.com/meodai/token-beam/tree/main/packages/aseprite" class="plugins__card" target="_blank" rel="noreferrer">
              <h3>Aseprite</h3>
              <p>Lua extension for pixel art workflows.</p>
            </a>
            <a href="https://github.com/meodai/token-beam/tree/main/packages/blender" class="plugins__card" target="_blank" rel="noreferrer">
              <h3>Blender</h3>
              <p>Python add-on for 3D material colors.</p>
            </a>
            <a href="https://github.com/nicolecomputer/token-beam-for-xd" class="plugins__card" target="_blank" rel="noreferrer">
              <h3>Adobe XD</h3>
              <p>UXP-based plugin for Adobe XD.</p>
            </a>
          </div>
        </div>
      </section>

      <section class="websites" id="websites">
        <div class="container">
          <h2>Websites Using Token Beam</h2>
          <div class="websites__grid">
            <a href="https://farbvelo.elastiq.ch" class="websites__card" target="_blank" rel="noreferrer">
              <h3>farbvelo</h3>
              <p>Generative color palette tool. Sync palettes to any design app.</p>
            </a>
            <a href="https://okpalette.app" class="websites__card" target="_blank" rel="noreferrer">
              <h3>OKPalette</h3>
              <p>Perceptually uniform color palette generator.</p>
            </a>
            <div class="websites__card websites__card--cta">
              <h3>+ Your Website</h3>
              <p>Add Token Beam to your project in minutes. See the developer section below.</p>
            </div>
          </div>
        </div>
      </section>

      <section class="features" id="features">
        <div class="container">
          <h2>Why ⊷ Token Beam?</h2>
          <div class="features__grid">
            <div class="features__card">
              <h3>W3C Spec Compliant</h3>
              <p>
                Built on the W3C Design Tokens Community Group specification. Generic, tool-agnostic token format
                that works everywhere.
              </p>
            </div>

            <div class="features__card">
              <h3>Real-Time Sync</h3>
              <p>
                WebSocket-based synchronization. Changes on your website appear instantly in Figma.
                No manual exports, no plugin updates required.
              </p>
            </div>

            <div class="features__card">
              <h3>Plugin Architecture</h3>
              <p>
                Clean adapter pattern. Each tool (Figma, Sketch, Aseprite) owns its transformation logic.
                Fully type-safe end-to-end.
              </p>
            </div>

            <div class="features__card">
              <h3>Token-Based Pairing</h3>
              <p>
                Simple <code>beam://</code> tokens for connecting clients. No accounts, no OAuth, no complexity.
                Just copy-paste and sync.
              </p>
            </div>

            <div class="features__card">
              <h3>Enterprise Ready</h3>
              <p>
                Session management, auto-cleanup, reconnection with exponential backoff, 10MB payload limits.
                Built for production.
              </p>
            </div>

            <div class="features__card">
              <h3>Self-Hosted</h3>
              <p>
                Run your own sync server. Complete control over your infrastructure. AGPL-3.0 for open source,
                commercial license available.
              </p>
            </div>
          </div>
        </div>
      </section>

      <section class="developers" id="developers">
        <div class="container">
          <h2>For Developers</h2>
          <p class="section-intro">Add real-time design token sync to your website or tool in a few lines of code. The <code>token-beam</code> library is MIT-licensed.</p>
          <div class="developers__example">
            <pre><code>import &lbrace; SyncClient, createCollection &rbrace; from 'token-beam';

const client = new SyncClient('wss://tokenbeam.dev');

// Create a W3C DTCG collection from your design tokens
const payload = createCollection('brand', &lbrace;
  'primary':   '#0066cc',
  'secondary': '#cc6600',
  'surface':   '#f5f5f5',
&rbrace;);

// Push to all connected design tools
client.on('paired', () =&gt; client.push(payload));</code></pre>
          </div>
          <div class="developers__links">
            <a href="https://github.com/meodai/token-beam" class="btn">Read the Docs</a>
            <a href="https://www.npmjs.com/package/token-beam" class="btn">npm install token-beam</a>
          </div>
        </div>
      </section>

      <section class="pricing" id="pricing">
        <div class="container">
          <h2>Commercial Infrastructure Pricing</h2>
          <p class="section-intro">End users never pay. These plans are for website owners who want hosted sync infrastructure.</p>
          <div class="pricing__grid">
            <div class="pricing__card">
              <h3>Free</h3>
              <div class="pricing__price">$0</div>
              <div class="pricing__detail">Forever</div>
              <ul>
                <li>Self-hosted (AGPL-3.0)</li>
                <li>MIT library (<code>token-beam</code> on npm)</li>
                <li>All plugins included (MIT)</li>
                <li>Community support</li>
              </ul>
              <a href="https://github.com/meodai/token-beam" class="btn btn--block">Get Started</a>
            </div>

            <div class="pricing__card pricing__card--featured">
              <h3>Pro</h3>
              <div class="pricing__price">$29</div>
              <div class="pricing__detail">per month</div>
              <ul>
                <li>Hosted by us (no setup)</li>
                <li>Unlimited sessions</li>
                <li>99.9% uptime SLA</li>
                <li>Email support</li>
              </ul>
              <a href="mailto:token-beam@elastiq.ch" class="btn btn--primary btn--block">Get Started</a>
            </div>

            <div class="pricing__card">
              <h3>Enterprise</h3>
              <div class="pricing__price">Custom</div>
              <div class="pricing__detail">contact us</div>
              <ul>
                <li>Everything in Pro</li>
                <li>Commercial self-hosting license</li>
                <li>SSO & SAML authentication</li>
                <li>Priority support (24h SLA)</li>
                <li>Custom integrations</li>
              </ul>
              <a href="mailto:token-beam@elastiq.ch" class="btn btn--primary btn--block">Contact Sales</a>
            </div>
          </div>

          <div class="pricing__note">
            <p><strong>100% Open Source.</strong> The server (AGPL-3.0), library and all plugins (MIT) are fully open source.</p>
            <p><strong>OSS Exception:</strong> Open source projects get Pro hosting free. <a href="mailto:token-beam@elastiq.ch">Apply here</a>.</p>
          </div>
        </div>
      </section>
    </main>

    <footer>
      <div class="container">
        <p>&copy; 2026 ⊷ Token Beam by <a href="https://github.com/meodai">David Aerne (meodai)</a></p>
        <p class="footer__links">
          <a href="mailto:token-beam@elastiq.ch">token-beam@elastiq.ch</a> &middot;
          <a href="https://github.com/meodai/token-beam">GitHub</a> &middot;
          Server, library & plugins are open source
        </p>
      </div>
    </footer>
  </body>

  <style is:global>
    /* --- Reset & Base --- */

    *,
    *::before,
    *::after {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --white: #fff;
      --black: #292f2f;
      --text: light-dark(var(--black), var(--white));
      --bg: light-dark(var(--white), var(--black));
      --line: color-mix(in lab, currentColor 18%, var(--bg));
      --ease: cubic-bezier(0.3, 0.7, 0, 1);
      --success: #1b8a2d;
    }

    html {
      color-scheme: light dark;
    }

    body {
      font-family: 'Iosevka Web', 'Iosevka', 'SF Mono', 'Fira Code', 'Fira Mono', 'Roboto Mono', monospace;
      font-weight: 300;
      font-size: 1rem;
      line-height: 1.6;
      color: var(--text);
      background: var(--bg);
      text-rendering: optimizeLegibility;
      -webkit-font-smoothing: antialiased;
    }

    .container {
      max-width: 60rem;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    /* --- Typography --- */

    h1, h2, h3 {
      font-weight: 200;
      letter-spacing: -0.03em;
      line-height: 1.2;
    }

    h1 {
      font-size: clamp(2.4rem, 6vw, 3.6rem);
      margin-bottom: 1.5rem;
    }

    h2 {
      font-size: clamp(1.8rem, 4vw, 2.4rem);
      text-align: center;
      margin-bottom: 3rem;
    }

    h3 {
      font-size: 1.2rem;
      font-weight: 300;
      margin-bottom: 0.75rem;
    }

    p {
      max-width: 40rem;
      margin-inline: auto;
      text-wrap: pretty;
    }

    a {
      color: currentColor;
      text-decoration-thickness: 1px;
      text-underline-offset: 3px;
      transition: opacity 0.2s var(--ease);
    }

    a:hover {
      opacity: 0.7;
    }

    /* External links get arrow */
    a[href^="http"]::after,
    a[href^="mailto"]::after {
      content: '\2197';
      display: inline-block;
      margin-left: 0.15em;
      font-size: 0.85em;
      opacity: 0.5;
    }

    code {
      font-family: inherit;
      font-size: 0.9em;
      background: var(--text);
      color: var(--bg);
      padding: 0.1em 0.4em;
      border: 1px solid var(--line);
    }

    strong {
      font-weight: 600;
    }

    /* --- Buttons --- */

    .btn {
      display: inline-block;
      padding: 0.46rem 0.9rem;
      border: 2px solid currentColor;
      background: transparent;
      color: currentColor;
      font-family: inherit;
      font-weight: 400;
      font-size: 0.85rem;
      letter-spacing: 0.04em;
      text-transform: uppercase;
      text-decoration: none;
      cursor: pointer;
      transition: all 0.2s var(--ease);
    }

    .btn::after {
      /* Override external link arrow for buttons */
      content: none !important;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 2px 0 0 currentColor;
      opacity: 1;
    }

    .btn:active {
      transform: translateY(0);
      box-shadow: none;
    }

    .btn--primary {
      background: var(--text);
      color: var(--bg);
      border-color: var(--text);
    }

    .btn--primary:hover {
      box-shadow: 0 2px 0 0 var(--text);
    }

    .btn--block {
      display: block;
      width: 100%;
      text-align: center;
    }

    /* --- Header --- */

    header {
      padding: 1.5rem 0;
      border-bottom: 1px solid var(--line);
    }

    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      font-size: 1rem;
      font-weight: 400;
      text-decoration: none;
      text-transform: uppercase;
      letter-spacing: 0.12em;
    }

    .logo__icon {
      font-size: 1.3em;
      line-height: 1;
    }

    .logo:hover {
      opacity: 1;
    }

    .logo::after {
      content: none !important;
    }

    nav {
      display: flex;
      gap: 1.5rem;
    }

    nav a {
      font-size: 0.8rem;
      letter-spacing: 0.04em;
      text-transform: uppercase;
      text-decoration: none;
    }

    nav a::after {
      content: none !important;
    }

    /* --- Hero --- */

    .hero {
      padding: 6rem 0 5rem;
      text-align: center;
    }

    .hero .container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .badge {
      display: inline-block;
      padding: 0.3rem 0.8rem;
      border: 1px solid var(--line);
      font-size: 0.7rem;
      font-weight: 400;
      text-transform: uppercase;
      letter-spacing: 0.06em;
      margin-bottom: 2rem;
      color: currentColor;
      opacity: 0.7;
    }

    .hero-text {
      font-size: 1.1rem;
      font-weight: 300;
      opacity: 0.7;
      margin: 0 auto 2.5rem;
      text-align: center;
    }

    .hero-buttons {
      display: flex;
      gap: 0.75rem;
      justify-content: center;
    }

    /* --- Diagram Section --- */

    .diagram {
      padding: 4rem 0;
      border-top: 1px solid var(--line);
    }

    .diagram__svg {
      width: 100%;
      max-width: 50rem;
      height: auto;
      margin: 0 auto;
      display: block;
      font-family: 'Iosevka Web', 'Iosevka', monospace;
    }

    .diagram__proto-text {
      fill: var(--bg);
    }

    @media (max-width: 768px) {
      .diagram {
        padding: 2.5rem 0;
        overflow-x: auto;
      }

      .diagram__svg {
        min-width: 36rem;
      }
    }

    /* --- Section intro --- */

    .section-intro {
      text-align: center;
      font-size: 0.95rem;
      opacity: 0.7;
      margin-bottom: 2.5rem;
    }

    /* --- Demo Section --- */

    .demo {
      padding: 5rem 0;
      border-top: 1px solid var(--line);
      border-bottom: 1px solid var(--line);
    }

    .demo__widget-wrap {
      max-width: 36rem;
      margin: 0 auto 1.5rem;
    }

    .demo__widget-wrap:last-child {
      margin-bottom: 0;
    }

    /* --- Plugins Section --- */

    .plugins {
      padding: 5rem 0;
      border-bottom: 1px solid var(--line);
    }

    .plugins__grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1px;
      border: 2px solid var(--line);
      background: var(--line);
    }

    .plugins__card {
      padding: 1.5rem;
      background: var(--bg);
      text-decoration: none;
      transition: background 0.2s var(--ease);
    }

    .plugins__card:hover {
      background: var(--line);
      opacity: 1;
    }

    .plugins__card::after {
      content: none !important;
    }

    .plugins__card p {
      font-size: 0.8rem;
      opacity: 0.6;
      margin: 0;
    }

    /* --- Websites Section --- */

    .websites {
      padding: 5rem 0;
      border-bottom: 1px solid var(--line);
    }

    .websites__grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1px;
      border: 2px solid var(--line);
      background: var(--line);
    }

