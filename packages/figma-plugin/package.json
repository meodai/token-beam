{
  "name": "token-beam-figma-plugin",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "version": "0.1.0",
  "scripts": {
    "build": "npm run build:code && npm run build:ui",
    "build:code": "vite build --config vite.config.code.ts",
    "build:ui": "vite build --config vite.config.ui.ts",
    "dev": "SYNC_SERVER_URL=\"${SYNC_SERVER_URL:-ws://localhost:8080}\" VITE_SYNC_SERVER_URL=\"$SYNC_SERVER_URL\" concurrently \"npm run build:code -- --watch\" \"npm run build:ui -- --watch\"",
    "dev:code": "vite build --config vite.config.code.ts --watch",
    "dev:ui": "SYNC_SERVER_URL=\"${SYNC_SERVER_URL:-ws://localhost:8080}\" VITE_SYNC_SERVER_URL=\"$SYNC_SERVER_URL\" vite build --config vite.config.ui.ts --watch"
  },
  "dependencies": {
    "token-beam": "*"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.100.0",
    "concurrently": "^9.0.0",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.0.0"
  }
}
