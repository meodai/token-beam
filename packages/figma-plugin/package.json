{
  "name": "figma-sync-plugin",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build": "npm run build:code && npm run build:ui",
    "build:code": "vite build --config vite.config.code.ts",
    "build:ui": "vite build --config vite.config.ui.ts",
    "dev": "concurrently \"npm run build:code -- --watch\" \"npm run build:ui -- --watch\"",
    "dev:code": "vite build --config vite.config.code.ts --watch",
    "dev:ui": "vite build --config vite.config.ui.ts --watch"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.100.0",
    "concurrently": "^9.0.0",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.0.0"
  }
}
